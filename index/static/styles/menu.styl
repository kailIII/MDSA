amarillo_claro = #ffe788
turqueza = #1bd6e0
section
		
	.MenuGrafico 
		height 100vh
		width 100%
		position relative	
		&-Fondo
			vertical-align top
			width 100%
			height 100%
			z-index -5
		&-Marco 
			position absolute
			top 0
			height 100%
			width 100% 
			display flex 
			justify-content center 
			align-items center 
			&-Items 
				width 90%
				height 50%
				overflow-y auto 
				//&::-webkit-scrollbar 
				//	display none
				.Item 
					border-bottom 1px solid turqueza
					height 90px 
					width 100%
					display flex 
					justify-content center 
					align-items center 
					&-Avatar					
						border-radius .5em
						margin 0 .5em 0 0
						height 60px 
						width 60px
						display flex 
						justify-content center 
						align-items center
						>a
							display block
							width 45px
							height 45px
							>img 
								vertical-align top
								width 100%
								height 100%
								transition .5s
								&:hover 
									transform rotateY(360deg)
					.Boton 	
						border 2px solid white
						border-radius .5em
						box-shadow 0 0 10px white
						line-height 29px
						margin 0 0 0 .5em
						width 60%
						transition .3s
						&:hover 
							box-shadow 1px 1px 10px amarillo_claro
							transform scale(1.1)
						&-Link 
							border-radius .5em
							color white 
							display block 
							font-weight bolder
							height 32px
							text-align center 
							text-shadow 1px 1px 10px black
							width 100%
							transition .3s
							&:hover 
								background rgba(black, .2)

				
							

								
				
			
		